<!-- Template Widgets -->

<div class="flex-container-vertical">

    <div class="flex-container-horizontal header-top-bar flex-item-vertical-one">
        <div class="flex-item flex-profile-one">
            <div class="header-tweet">
                {{widget('tweet', 'tweet', {
                  'linkText': 'Tweet',
                  'tweetText': 'Tweet',
                  'align': 'widget-align-left'
                })|raw}}
            </div>
            <div class="header-like">
                {{widget('facebooklike', 'likebutton', {
                    text: 'FaceBook Like',
                    showFaces: 'true',
                    action: 'like',
                    colorscheme: 'dark',
                    layout: 'horizontal',
                    height: '20',
                    font: 'arial',
                    locale: 'en_US',
                    thisUrl: 'www.mysite.com'
                })|raw}}
            </div>
        </div>
        <div class="flex-item flex-profile-two">
            {{widget('profile', 'headeraddress', {
                'profileType':'address',
                'address':'profile'
            })|raw}}
        </div>
    </div>

    <div class="flex-container-horizontal header-bottom-bar flex-item-vertical-two">

        <div class="flex-item flex-nav">
            {{widget('extendednavigation', 'navigation', {"align":"right"})|raw}}
        </div>
        <div class="flex-item flex-logo">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
        </div>
        <div class="flex-item flex-companyname">
            {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
        </div>

    </div>

</div> <!-- End Flex Container Vertical -->

<div class="header-bottom-line"></div>

<!-- End Template Widgets -->
